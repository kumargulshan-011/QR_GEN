<body>

    <div class="container">
        <h2>QR Code Generator</h2>
        <p>Paste a link below and get your QR code instantly!</p>

        <input type="text" id="urlInput" class="input" placeholder="Enter URL (example: https://google.com)">
        <input type="file" id="logoInput" class="input" accept="image/*">

        <button class="btn" onclick="generateQR()">Generate QR Code</button>

        <div id="qr-wrapper">
            <div id="qrCode"></div>
            <img id="logo" src="">
        </div>

        <button id="downloadBtn" class="btn" onclick="downloadQR()">Download QR Code</button>
    </div>

    <!-- QR Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <script>
        let qr;

        function generateQR() {
            let url = document.getElementById("urlInput").value;
            let logoFile = document.getElementById("logoInput").files[0];
            let logoImg = document.getElementById("logo");

            if (!url.trim()) {
                alert("Please enter a URL.");
                return;
            }

            document.getElementById("qrCode").innerHTML = "";
            document.getElementById("logo").style.display = "none";

            qr = new QRCode(document.getElementById("qrCode"), {
                text: url,
                width: 256,
                height: 256
            });

            if (logoFile) {
                let reader = new FileReader();
                reader.onload = function(e) {
                    logoImg.src = e.target.result;
                    logoImg.style.display = "block";
                }
                reader.readAsDataURL(logoFile);
            }

            document.getElementById("downloadBtn").style.display = "block";
        }

        function downloadQR() {
            const qrCanvas = document.querySelector("canvas");
            const logoImg = document.getElementById("logo");

            const finalCanvas = document.createElement("canvas");
            const ctx = finalCanvas.getContext("2d");

            finalCanvas.width = qrCanvas.width;
            finalCanvas.height = qrCanvas.height;

            ctx.drawImage(qrCanvas, 0, 0);

            if (logoImg.style.display !== "none") {
                const size = 60;
                const x = (finalCanvas.width - size) / 2;
                const y = (finalCanvas.height - size) / 2;
                ctx.drawImage(logoImg, x, y, size, size);
            }

            const link = document.createElement("a");
            link.href = finalCanvas.toDataURL();
            link.download = "qr-code.png";
            link.click();
        }
    </script>

</body>
</html>
